<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mateusz.songle.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="5dp">

        <!-- In the future, think about a vay to generalise buttons -->
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="24dp"
            android:layout_below="@id/menuButtons"
            android:onClick="fabChangeView"
            app:layout_anchorGravity="bottom"/>

        <LinearLayout
            android:id="@+id/menuButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:background="@drawable/rectangle"
            android:layout_alignParentEnd="true">

            <Button
                android:id="@+id/btnRestart"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle"
                android:text="R"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/btnHelp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle"
                android:text="\?"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/btnStats"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle"
                android:text="S"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:textSize="15sp"/>


            <Button
                android:id="@+id/btnStretch"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:background="@drawable/circle"
                android:text="EXP"
                android:layout_margin="10dp"
                android:gravity="center_vertical"
                android:onClick="btnMenu"
                android:textAlignment="center" />
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
